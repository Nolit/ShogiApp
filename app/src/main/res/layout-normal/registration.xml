<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="会員登録"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formName"
        android:layout_below="@+id/formName"
        android:layout_marginTop="15dp"
        android:text="メールアドレス" />

    <EditText
        android:id="@+id/formName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="20"
        android:inputType="text"
        android:textSize="15sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formName"
        android:layout_below="@+id/intentLoginButton"
        android:layout_marginTop="35dp"
        android:text="ユーザー名" />

    <EditText
        android:id="@+id/formMail"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textMail"
        android:layout_below="@+id/textMail"
        android:ems="20"
        android:inputType="text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formMail"
        android:layout_below="@+id/formMail"
        android:layout_marginTop="15dp"
        android:text="パスワード" />

    <EditText
        android:id="@+id/formPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_below="@+id/textPassword"
        android:ems="20"
        android:inputType="text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formPassword"
        android:layout_below="@+id/formPassword"
        android:layout_marginTop="15dp"
        android:text="パスワード確認" />

    <EditText
        android:id="@+id/formConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textConfirmPassword"
        android:layout_below="@+id/textConfirmPassword"
        android:ems="20"
        android:inputType="text"
        android:textSize="15sp" />

    <Button
        android:id="@+id/intentLoginButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textName"
        android:layout_alignBottom="@+id/textName"
        android:layout_alignRight="@+id/formName"
        android:text="ログイン"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultText"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" >

    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formConfirmPassword"
        android:layout_centerVertical="true"
        android:textSize="10sp" />

    <Button
        android:id="@+id/canselButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="戻る"
        android:textSize="10sp"
        android:layout_above="@+id/registrationButton"
        android:layout_alignLeft="@+id/linearLayout1" />

    <Button
        android:id="@+id/registrationButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="登録"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout1" />

</RelativeLayout>