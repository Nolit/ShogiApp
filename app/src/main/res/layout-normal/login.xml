<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.Login" >

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="ログイン"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formName"
        android:layout_below="@+id/formName"
        android:text="パスワード" />

    <EditText
        android:id="@+id/formPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textPassword"
        android:layout_below="@+id/textPassword"
        android:inputType="text"
        android:ems="20"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formPassword"
        android:layout_alignRight="@+id/formPassword"
        android:layout_below="@+id/formPassword"
        android:layout_marginTop="64dp"
        android:gravity="center" >

        <Button
            android:id="@+id/canselButton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:text="戻る"
            android:textSize="10sp" />

        <Button
            android:id="@+id/registrationButton"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:text="ログイン"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/formName"
        android:layout_below="@+id/textName"
        android:layout_marginTop="45dp"
        android:text="ユーザー名" />

    <Button
        android:id="@+id/intentRegistrationButton"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/formName"
        android:layout_alignTop="@+id/textName"
        android:text="新規登録"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/formName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/nameText"
        android:layout_centerHorizontal="true"
        android:inputType="text"
        android:ems="20"
        android:textSize="15sp" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/formPassword"
        android:layout_marginTop="17dp"
        android:textSize="10sp" />

</RelativeLayout>