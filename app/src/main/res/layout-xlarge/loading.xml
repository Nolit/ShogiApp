<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/as"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.Matching" >

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/senteName"
        android:layout_marginLeft="5dp"
        android:src="@drawable/res_noimage" />

    <TextView
        android:id="@+id/senteRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginBottom="15dp"
        android:text="Rate:3000"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/senteName"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/ImageView02"
        android:text="先手称号"
        android:textColor="#fff"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ImageView02"
        android:layout_below="@+id/ImageView02"
        android:layout_marginTop="19dp"
        android:text="先手"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="VS"
        android:textColor="#fff"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="12dp"
        android:layout_marginTop="129dp"
        android:src="@drawable/res_noimage" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView01"
        android:layout_marginBottom="59dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:text="後手称号"
        android:textColor="#fff"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView01"
        android:layout_alignRight="@+id/textView5"
        android:text="後手名前"
        android:textColor="#fff"
        android:textSize="30sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/goteRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_marginBottom="17dp"
        android:layout_toLeftOf="@+id/ImageView01"
        android:text="Rate:3000"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageView01"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/textView2"
        android:text="後手"
        android:textColor="#fff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/senteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView4"
        android:layout_marginBottom="47dp"
        android:text="先手名前"
        android:textColor="#fff"
        android:textSize="30sp"
        android:typeface="serif" />

</RelativeLayout>