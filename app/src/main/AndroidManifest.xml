<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uty.shogiapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MyPage"
            android:label="@string/title_activity_my_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Login"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Registration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.Battle"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_battle"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".activities.Matching"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.Problem" />
        <activity android:name=".activities.ProblemList"></activity>
    </application>

</manifest>